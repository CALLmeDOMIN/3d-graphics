DEF SRotationTime TimeSensor {
    loop TRUE
    cycleInterval 20
}

DEF SRotationInterpolator OrientationInterpolator {
    key [0, 0.5, 1]
    keyValue [0 1 0 0, 0 1 0 3.14, 0 1 0 6.28]
}

